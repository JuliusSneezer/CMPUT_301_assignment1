<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_height="fill_parent"
android:layout_width="fill_parent" >

<TableRow
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter date (yyyy-mm-dd)"

        android:layout_column="0" />
    <EditText
        android:id="@+id/edit_date"
        android:text=""
        android:layout_weight="100"/>
</TableRow>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter station name: "


        android:layout_column="0" />

    <EditText
        android:text=""
        android:layout_weight="50"
        android:layout_column="0"
        android:id="@+id/edit_station"/>
</TableRow>


<TableRow
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter odometer reading (km)"

        android:layout_column="0" />

    <EditText
        android:id="@+id/edit_odometer"
        android:text=""
        android:layout_weight="50"
        android:layout_column="0" />
</TableRow>


<TableRow
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter fuel amount (L):"

        android:layout_column="0" />
    <EditText
        android:id="@+id/edit_fuel_amount"
        android:text=""
        android:layout_weight="50"
        android:layout_column="0" />
</TableRow>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter fuel unit cost (L): "

        android:layout_column="0" />

    <EditText
        android:id="@+id/edit_fuel_unit_cost"
        android:text= ""
        android:layout_weight="50"
        android:layout_column="1" />
</TableRow>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter fuel grade (L):"

        android:layout_column="0" />

    <EditText
        android:id="@+id/edit_fuel_grade"
        android:text= ""
        android:layout_weight="50"
        android:layout_column="1" />
</TableRow>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/Done"
    android:gravity= "center"
    android:text="Done"
    android:onClick="Saved" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/Cancel"
    android:gravity= "center"
    android:text="Cancel"
    android:onClick="Canceled" />





</TableLayout>