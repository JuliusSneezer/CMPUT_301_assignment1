

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:text="Add Entry"
        android:layout_column="10" />


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Date:"

            android:layout_column="0" />
        <EditText
            android:id="@+id/add_date"
            android:text="Enter today's date (yyyy-mm-dd)"
            android:layout_weight="100"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Station"


            android:layout_column="0" />

        <EditText
            android:text="Enter station name: "
            android:layout_weight="50"
            android:layout_column="0"
            android:id="@+id/add_station"/>
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Odometer:"

            android:layout_column="0" />

        <EditText
            android:id="@+id/add_odometer"
            android:text="Enter odometer reading (km)"
            android:layout_weight="50"
            android:layout_column="0" />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Fuel:"

            android:layout_column="0" />
        <EditText
            android:id="@+id/add_fuel"
            android:text="Enter fuel remaining (L)"
            android:layout_weight="50"
            android:layout_column="0" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Fuel Cost:"

            android:layout_column="0" />

        <EditText
            android:id="@+id/add_fuel_cost"
            android:text="Enter fuel unit cost (L) "
            android:layout_weight="50"
            android:layout_column="1" />
    </TableRow>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity= "center"
        android:text="Save"
        android:onClick="addSaved" />




</TableLayout>