<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Enter date (yyyy-mm-dd)"

            android:layout_column="0" />
        <TextView
            android:id="@+id/view_date"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="100"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Enter station name: "


            android:layout_column="0" />

        <TextView
            android:text=""
            android:layout_weight="50"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_column="0"
            android:id="@+id/view_station"/>
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Enter odometer reading (km)"

            android:layout_column="0" />

        <TextView
            android:id="@+id/view_odometer"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:layout_weight="50"
            android:layout_column="0" />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Enter fuel amount (L):"

            android:layout_column="0" />
        <TextView
            android:id="@+id/view_fuel_amount"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:layout_weight="50"
            android:layout_column="0" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Enter fuel unit cost (L): "

            android:layout_column="0" />

        <TextView
            android:id="@+id/view_fuel_unit_cost"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text= ""
            android:layout_weight="50"
            android:layout_column="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Enter fuel grade (L):"

            android:layout_column="0" />

        <TextView
            android:id="@+id/view_fuel_grade"
            android:text= ""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="50"
            android:layout_column="1" />
    </TableRow>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cancel"
        android:gravity= "center"
        android:text="Back"
        android:onClick="Canceled" />





</TableLayout>